<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <solid android:color="@color/White" />
    <stroke
        android:width="0.8dp" />
    <corners android:radius="5dp" />

    <!-- Make sure bottom and top padding match corner radius -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>



