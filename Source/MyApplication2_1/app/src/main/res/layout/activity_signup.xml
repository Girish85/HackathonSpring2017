<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usgir.myapplication.signup">

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText44"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/editText5"
                android:layout_below="@+id/editText5"
                android:layout_marginTop="27dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Enter Email_id"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText46"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/editText44"
                android:layout_marginStart="63dp"
                android:layout_marginTop="31dp"
                android:layout_toEndOf="@+id/imageButton44"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Enter password"
                android:inputType="textPersonName"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/imageButton44"
                style="@android:style/Widget.ImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="38dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/arrow"
                android:elevation="2dp"
                android:onClick="onPassword"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/arrow" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editText46"
                android:layout_below="@+id/imageButton44"
                android:layout_marginTop="51dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Enter First Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editText4"
                android:layout_below="@+id/editText4"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Enter Last name"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/imageButton311"
                style="@android:style/Widget.ImageButton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/sign"
                android:elevation="5dp"
                android:onClick="onPassword"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/sign"
                android:layout_below="@+id/editText46"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp" />
        </RelativeLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
